import { useEffect, useState } from 'react'
import { supabase } from './supabaseClient'

export default function TradeList() {
  const [trades, setTrades] = useState([])

  useEffect(() => {
    const loadTrades = async () => {
      const user = (await supabase.auth.getUser()).data.user

      const { data, error } = await supabase
        .from('trade')
        .select(`
          id,
          date,
          action,
          quantity,
          price_per_unit,
          total,
          tag,
          notes,
          account (name, type),
          asset (isin, name)
        `)
        .eq('user_id', user.id)
        .order('date', { ascending: false })

      if (!error) setTrades(data)
    }

    loadTrades()
  }, [])

  return (
    <div className="p-4 max-w-4xl mx-auto mt-6">
      <h3 className="text-xl font-bold mb-4">Trade History</h3>
      {trades.length === 0 ? (
        <p>No trades yet.</p>
      ) : (
        <table className="w-full border-collapse">
          <thead>
            <tr className="text-left border-b">
              <th className="p-2">Date</th>
              <th className="p-2">Account</th>
              <th className="p-2">Asset</th>
              <th className="p-2">Action</th>
              <th className="p-2">Qty</th>
              <th className="p-2">Price</th>
              <th className="p-2">Total</th>
              <th className="p-2">Notes</th>
            </tr>
          </thead>
          <tbody>
            {trades.map(trade => (
              <tr key={trade.id} className="border-b">
                <td className="p-2">{trade.date}</td>
                <td className="p-2">{trade.account.name} ({trade.account.type})</td>
                <td className="p-2">{trade.asset.isin} â€“ {trade.asset.name}</td>
                <td className="p-2 capitalize">{trade.action}</td>
                <td className="p-2">{trade.quantity}</td>
                <td className="p-2">{trade.price_per_unit}</td>
                <td className="p-2">{trade.total?.toFixed(2)}</td>
                <td className="p-2">{trade.notes}</td>
              </tr>
            ))}
          </tbody>
        </table>
      )}
    </div>
  )
}
